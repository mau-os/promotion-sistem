<% if @promotion.errors.any? %>
  <ul>
    <% @promotion.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @promotion do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :code %>
    <%= f.text_field :code, disabled: generated_coupons %>
  </div>
  <div>
    <%= f.label :discount_rate %>
    <%= f.number_field :discount_rate, in: 0..100, step: 0.01, disabled: generated_coupons %>
  </div>
  <div>
    <%= f.label :coupon_quantity %>
    <%= f.number_field :coupon_quantity, min: 1, disabled: generated_coupons %>
  </div>
  <div>
    <%= f.label :expiration_date %>
    <%= f.date_field :expiration_date, disabled: generated_coupons %>
  </div>
  <%= f.submit %>
<% end %>