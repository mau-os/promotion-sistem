<% if @promotion.errors.any? %>
  <ul>
    <% @promotion.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @promotion do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :code, class: 'form-label' %>
    <%= f.text_field :code, disabled: generated_coupons, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :discount_rate, class: 'form-label' %>
    <%= f.number_field :discount_rate, in: 0..100, step: 0.01, disabled: generated_coupons, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :coupon_quantity, class: 'form-label' %>
    <%= f.number_field :coupon_quantity, min: 1, disabled: generated_coupons, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :expiration_date, class: 'form-label' %>
    <%= f.date_field :expiration_date, disabled: generated_coupons, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
