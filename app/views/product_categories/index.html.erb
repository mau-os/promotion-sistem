<div class="d-flex justify-content-between mb-3">
  <%= link_to 'Voltar', root_path %>
  <%= link_to 'Registrar uma categoria de produto', new_product_category_path %>
</div>


<% if @product_categories.any? %>
  <table class="table table-striped table-hover last-2-colluns-right">
    <tr class="table-dark">
      <th><%= ProductCategory.human_attribute_name(:name) %></th>
      <th><%= ProductCategory.human_attribute_name(:code) %></th>
      <th></th>
      <th></th>
    </tr>

    <% @product_categories.each do |product_category| %>
      <tr id="product-category-<%= product_category.code.parameterize %>">
        <td><%= link_to product_category.name, product_category %></td>
        <td><%= product_category.code %></td>
        <td><%= link_to 'Editar', edit_product_category_path(product_category) %></td>
        <td>
          <%= link_to 'Deletar', product_category_path(product_category), method: :delete,
            data: { confirm: 'Quer apagar esta categoria de produto?'} %>
        </td>
      </tr>
    <% end %>
    </table>
<% end %>

<% if @product_categories.empty? %>
  <h3>Nenhuma categoria de produto cadastrada</h3>
<% end %>