<%= link_to 'Voltar', root_path %>

<%= link_to 'Registrar uma categoria de produto', new_product_category_path %>

<% if @product_categories.empty? %>
  <h3>Nenhuma categoria de produto cadastrada</h3>
<% end %>


<% @product_categories.each do |product_category| %>
  <div id="product-category-<%= product_category.code.parameterize %>">
    <dl>
      <dd><%= ProductCategory.human_attribute_name(:name) %></dd>
      <dt><%= link_to product_category.name, product_category %></dt>
      <dd><%= ProductCategory.human_attribute_name(:code) %></dd>
      <dt><%= product_category.code %></dt>
    </dl>

    <%= link_to 'Editar', edit_product_category_path(product_category) %>
    <%= link_to 'Deletar', product_category_path(product_category), method: :delete,
        data: { confirm: 'Quer apagar esta categoria de produto?'} %>
  </div>
<% end %>