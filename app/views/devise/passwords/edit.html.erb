<div class="login-container mx-auto">
  <h2>Troque sua senha</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mb-3">
      <%= f.label :password, "Nova senha" %><br />
      <% if @minimum_password_length %>
        <em>(mínimo de <%= @minimum_password_length %> caracteres)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, "Confirmação de nova senha" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "Trocar minha senha", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>